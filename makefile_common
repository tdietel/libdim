CC = cc
CXX = CC

CPP = yes
THREADS=yes
SHAREABLE=
IDIR = ./dim
OS = Linux

MAKE = gmake

EXTRALIBS = 
FLAGS = 

CFLAGS = $(FLAGS) -g -I$(IDIR) 
LIBFLAGS =

ifeq ($(OS),SunOS)
	CFLAGS += -DMIPSEB -DPROTOCOL=1 -Dsunos
endif
ifeq ($(OS),Solaris)
ifeq ($(THREADS),yes)
	CFLAGS += -mt
	EXTRALIBS += -lposix4
endif
	SHAREABLE = no
	LIBFLAGS += -G 
	EXTRALIBS += -lsocket -lnsl
	CFLAGS += -DMIPSEB -DPROTOCOL=1 -Dsolaris 
	RANLIB = echo
endif

ifeq ($(OS),HP-UX)
	SHAREABLE = no
	THREADS = no
	CFLAGS += -DMIPSEB -DPROTOCOL=1 -Dhpux
endif
ifeq ($(OS),OSF1)
	SHAREABLE = no
	THREADS = no
	CFLAGS += -DMIPSEL -DPROTOCOL=1 -Dosf
endif
ifeq ($(OS),AIX)
	SHAREABLE = no
	THREADS = no
	CFLAGS += -DMIPSEB -DPROTOCOL=1 -Dunix -D_BSD -Daix
endif
ifeq ($(OS),LynxOS)
	SHAREABLE = no
ifeq ($(ARCH),RAID)
	CFLAGS += -I/usr/include/bsd -I/usr/include/posix -DMIPSEB -DPROTOCOL=1 -Dunix -DLYNXOS -DRAID
	EXTRALIBS += -L/usr/posix/usr/lib -lbsd
else
ifeq ($(ARCH),INTEL)
	CFLAGS += -DMIPSEL -DPROTOCOL=1 -Dunix -DLYNXOS
	EXTRALIBS += -llynx -lbsd
else
	CFLAGS += -DMIPSEB -DPROTOCOL=1 -Dunix -DLYNXOS -mthreads
	EXTRALIBS += -lbsd
endif
endif
endif
ifeq ($(OS),Linux)
	CC = gcc
	CXX = g++
	CFLAGS += -DMIPSEL -DPROTOCOL=1 -Dunix -Dlinux
ifneq ($(SHAREABLE),no)
	SHAREABLE = yes
	LIBFLAGS += -shared
endif
endif

ifneq ($(THREADS),yes)
	CFLAGS += -DNOTHREADS
else
ifneq ($(OS), LynxOS)
	EXTRALIBS += -lpthread
endif
endif






